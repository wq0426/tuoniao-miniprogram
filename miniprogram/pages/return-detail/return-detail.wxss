page {
  background-color: #F7F7F2;
  min-height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 30rpx;
}

/* 退款状态区域 */
.status-section {
  background-color: #FFFFFF;
  padding: 30rpx 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

/* 进度时间线 */
.progress-timeline {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  margin-top: 60rpx;
}

.progress-line {
  position: absolute;
  top: 18rpx;
  left: 35rpx;
  right: 35rpx;
  height: 2rpx;
  background-color: #B7DA9E;
  z-index: 1;
}

.timeline-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
  width: 33.33%;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #B7DA9E;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 10rpx;
}

.timeline-dot.completed {
  position: relative;
}

.timeline-dot.completed::after {
  content: "";
  width: 16rpx;
  height: 8rpx;
  border-left: 2rpx solid #FFFFFF;
  border-bottom: 2rpx solid #FFFFFF;
  transform: rotate(-45deg);
  position: absolute;
}

.timeline-text {
  font-size: 28rpx;
  color: #333333;
  margin-top: 20px;
}

.timeline-date {
  font-size: 24rpx;
  color: #999999;
}

/* 退款金额区域 */
.amount-section {
  background-color: #FFFFFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.amount-title-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.amount-title {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  margin-bottom: 10rpx;
}

.amount-subtitle {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.amount-value {
  color: #F9AE49;
}

.amount-value text {
  font-weight: 400;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 24px;
color: #F9AE49;
line-height: 22px;
text-align: right;
font-style: normal;
text-transform: none;
}

/* 退款信息区域 */
.info-section {
  background-color: #FFFFFF;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}

/* 商品信息 */
.product-info {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
  margin-bottom: 20rpx;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.product-quantity {
  font-size: 26rpx;
  color: #999999;
}

/* 详细信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  max-width: 430rpx;
}

.info-value-with-action {
  display: flex;
  align-items: center;
}

.copy-btn {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #70a76a;
  padding: 4rpx 14rpx;
  background-color: #f1f8ef;
  border-radius: 24rpx;
} 