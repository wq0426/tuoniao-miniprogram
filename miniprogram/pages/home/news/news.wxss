/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
}

.loading-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ADC05A;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 100%;
}

.error-container image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #ADC05A;
  color: white;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
}

/* 无数据样式 */
.no-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
}

.no-data image {
