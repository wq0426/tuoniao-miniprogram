}

.no-data text {
  font-size: 28rpx;
  color: #666;
}

/* 标签激活状态 */
.search-content-tags-item-1.active, 
.search-content-tags-item-2.active,
.search-content-tags-item-3.active,
.search-content-tags-item-4.active {
