.banner-loading {
  width: 100%;
  height: 375rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.loading-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ADC05A;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.no-banners {
  width: 100%;
