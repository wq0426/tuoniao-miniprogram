/* 页面整体样式 */
.container {
  padding: 20rpx;
  background-color: #ffffff;
}

/* 标题样式 */
.header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.title {
    width: 750rpx;
    height: 115rpx;
    justify-content: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #FFFFFF;
    position: relative;
}

.title-left {
    height: 115rpx;
    margin-left: 41.67rpx;
    margin-top: 100.38rpx;
}
.title-left image {
    width: 31.25rpx;
    height: 31.25rpx;
}

.title-right {
    width: 677rpx;
    height: 115rpx;
    font-family: Source Han Sans CN, Source Han Sans CN;
    font-weight: 400;
    font-size: 31rpx;
    color: #1C1C1C;
    line-height: 44rpx;
    text-align: center;
    font-style: normal;
    text-transform: none;
    margin-top: 93.38rpx;
    margin-right: 31.25rpx;
}

/* 图片展示区域 */
.image-gallery {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 10rpx;
}

.image-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 21rpx;
  margin-top: 9rpx;
}

.image-item-1{
  width: 708rpx;
  height: 343rpx;
  position: relative;
}

.image-item-1-text, .image-item-2-text{
  position: absolute;
  height: 35rpx;
  left: 20rpx;
  top: 20rpx;
  background: #1C1C1C;
  border-radius: 18rpx 18rpx 18rpx 18rpx;
  opacity: 0.7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-item-1-text{
  width: 88rpx;
}
.image-item-2-text{
  width: 70rpx;
}

.image-item-1-text text, .image-item-2-text text{
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 300;
  font-size: 17rpx;
  color: #FFFFFF;
  line-height: 23rpx;
  text-align: left;
  font-style: normal;
  text-transform: none;
}

.image-item {
  width: 343rpx;
  height: 343rpx;
  position: relative;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

/* 图片样式 */
image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10rpx;
}


.title-scale {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.title-scale image {
  width: 52rpx;
  height: 52rpx;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
}

.loading-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ADC05A;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  width: 100%;
}

.error-container image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-button {
  background-color: #ADC05A;
  color: white;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
}

/* 无数据样式 */
.no-data-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
}

.no-data-container image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.no-data-container text {
  font-size: 28rpx;
  color: #666;
}

/* 内容容器 */
.content-container {
  width: 100%;
}