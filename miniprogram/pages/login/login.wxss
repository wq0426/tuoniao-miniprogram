/* page样式 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  position: relative;
  height: 100vh;
}

.auth-back-container {
  position: absolute;
  top: 84.38rpx;
  left: 41.67rpx;
}

.auth-back-button {
  width: 31.25rpx;
  height: 31.25rpx;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  z-index: -1;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100vw;
  position: relative;
}

.custom-item {
  margin-top: 430rpx;
  width: 100vw;
  height: 70vh;
  background: rgba(247,247,242,0.95);
  border-radius: 42rpx 42rpx 0rpx 0rpx;
}

/* 输入框容器 */
.phone-input-container, .code-input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  position: relative; /* 使图标可以相对于输入框进行定位 */
}

.submit-input-container {
	display: flex;
	align-items: center;
	margin-top: 52.08rpx;
  border: 0px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
	position: relative; 
}

.phone-input-container {
	margin-top: 117.08rpx;
}

.code-input-container {
	margin-top: 20.83rpx;
}

/* 设置图标位置 */
.phone-input-img, .code-input-img {
	margin-left: 52.08rpx;
  width: 29.15rpx;
	height: 29.15rpx;
}

.phone-input-text {
	padding: 0 10.42rpx;
	height: 27.08rpx;
}

.code-input-text {
	padding: 0 10.42rpx;
  width: 170rpx;
	height: 27.08rpx;
}

/* 验证码输入框 */
.code-input, .phone-input {
	display: flex;
	align-items: center;
  width: 583rpx;
  height: 93.75rpx;
  background: #FFFFFF;
  border-radius: 52rpx;
  box-sizing: border-box;
	font-family: Source Han Sans CN, Source Han Sans CN;
	font-weight: 300;
	font-size: 27rpx;
	color: #B2B2B2;
	line-height: 38rpx;
	text-align: left;
	font-style: normal;
	text-transform: none;
}

.phone-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  position: relative;
}

.phone-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 60%;
  border-radius: 3rpx;
  background: #333;
}

.phone-icon::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 50%;
  height: 8rpx;
  border-radius: 4rpx;
  background: #333;
}

.validate-text {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
  font-size: 28rpx;
  color: #ADC05A;
  line-height: 40rpx;
  text-align: center;
  font-style: normal;
  text-transform: none;
  margin-right: 20rpx;
  position: absolute;
  right: 130rpx;
}

.validate-text-disabled {
  color: #999999; /* Grayed out color for the disabled state */
  pointer-events: none; /* Prevent clicking during countdown */
}

.submit-btn {
	display: flex;
	align-items: center;
  width: 583rpx;
  height: 93.75rpx;
  background: #FFFFFF;
  border-radius: 52rpx;
  margin-left: 83.33rpx;
  box-sizing: border-box;
	font-family: Source Han Sans CN, Source Han Sans CN;
	font-weight: 300;
	font-size: 27rpx;
	color: #B2B2B2;
	line-height: 38rpx;
	text-align: left;
	font-style: normal;
	text-transform: none;
}
.submit-btn {
  display: flex;
  justify-content: center;  /* 水平居中 */
  align-items: center;      /* 垂直居中 */
	background: #ADC05A;
	border-radius: 52rpx 52rpx 52rpx 52rpx;
}
.submit-text {
