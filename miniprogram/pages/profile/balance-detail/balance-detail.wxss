page {
  background-color: #FFFFFF;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
  padding-bottom: 30rpx;
}

/* Header */
.header {
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 88rpx;
  padding: 60rpx 30rpx 20rpx;
  background: #F7F7F2;
  position: relative;
}

.back-icon {
  width: 31.67rpx;
  height: 31.67rpx;
  display: flex;
  align-items: center;
  margin-left: 41.67rpx;
}

.back-icon image {
  width: 41.67rpx;
  height: 41.67rpx;
}

.title {
  width: 50%;
  position: absolute;
  left: 25%;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 400;
  color: #1C1C1C;
}

/* 标签页样式 */
.tabs {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.tab {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  font-size: 30rpx;
  color: #666666;
  font-weight: 400;
}

.tab.active {
  color: #61CA8D;
  font-weight: 500;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 4rpx;
  background-color: #61CA8D;
  border-radius: 2rpx;
}

/* 余额明细列表样式 */
.records-list {
  padding: 20rpx 30rpx;
}

.record-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.record-left {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.record-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}

.record-middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.record-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-amount.negative {
  color: #333333;
}

.record-amount.positive {
  color: #61CA8D;
}

.record-balance {
  font-size: 24rpx;
  color: #999999;
}

/* 提现记录列表样式 */
.withdraw-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.withdraw-left {
  display: flex;
  flex-direction: column;
}

.withdraw-amount {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.withdraw-amount.negative {
  color: #333333;
}

.withdraw-status {
  font-size: 24rpx;
  color: #999999;
}

.withdraw-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.withdraw-time {
  font-size: 24rpx;
  color: #999999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 150rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #EEEEEE;
  border-top: 4rpx solid #61CA8D;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 28rpx;
  color: #999999;
} 