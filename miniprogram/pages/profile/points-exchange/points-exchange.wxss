page {
background: linear-gradient( 180deg, #ADC05A 0%, rgba(247,247,242,0) 100%);
border-radius: 0rpx 0rpx 0rpx 0rpx;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
  position: relative;
}

/* Header */
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 40rpx 30rpx 20rpx;
}

.back-icon {
  width: 31.67rpx;
  height: 31.67rpx;
  display: flex;
  align-items: center;
}

.back-icon image {
  width: 41.67rpx;
  height: 41.67rpx;
}

.title {
  position: absolute;
  left: 40%;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 31rpx;
color: #FFFFFF;
line-height: 44rpx;
text-align: center;
font-style: normal;
text-transform: none;
}

.rules-button {
  position: absolute;
  right: 0rpx;
  top: 180rpx;
  border-radius: 30rpx;
  width: 177rpx;
height: 42rpx;
background: #5A8D54;
border-radius: 21rpx 0rpx 0rpx 21rpx;
display: flex;
align-items: center;
justify-content: center;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 19rpx;
color: #FFFFFF;
line-height: 26rpx;
text-align: left;
font-style: normal;
text-transform: none;
}

/* Points Info */
.points-info {
  padding: 30rpx;
  color: #FFFFFF;
}

.points-type {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 23rpx;
color: #FFFFFF;
line-height: 32rpx;
text-align: left;
font-style: normal;
text-transform: none;
}

.points-value {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 42rpx;
color: #FFFFFF;
line-height: 58rpx;
text-align: left;
font-style: normal;
text-transform: none;
  margin: 10rpx 0;
}

.exchange-record {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 23rpx;
color: #FFFFFF;
line-height: 32rpx;
text-align: left;
font-style: normal;
text-transform: none;
  opacity: 0.8;
}

/* Exchange Grid */
.exchange-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  margin-top: 20rpx;
  padding-bottom: 50rpx;
}

.exchange-item {
  width: 30%;
  background-color: #F7F7F2;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.coupon-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.coupon-title {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 19rpx;
color: #1C1C1C;
line-height: 26rpx;
text-align: left;
font-style: normal;
text-transform: none;
  margin-top: 5rpx;
  text-align: center;
}

.points-required {
  font-size: 22rpx;
  color: #999999;
  text-align: center;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 17rpx;
color: #7F7F7F;
line-height: 23rpx;
text-align: left;
font-style: normal;
text-transform: none;
}

.exchange-button {
  width: 145rpx;
  height: 31rpx;
  background-color: #7B9A57;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 500;
font-size: 17rpx;
color: #FFFFFF;
line-height: 23rpx;
text-align: center;
font-style: normal;
text-transform: none;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
} 

.exchange-grid-disabled {
  opacity: 0.5;
}