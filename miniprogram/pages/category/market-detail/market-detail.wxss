page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f5;
}

.scrollarea {
  position: relative;
  height: 100vh;
}

.home-container {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  position: relative;
  padding-bottom: 150rpx;
}

.title {
  width: 750rpx;
  height: 115rpx;
  justify-content: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #FFFFFF;
}

.title-left {
  height: 115rpx;
  margin-left: 41.67rpx;
  margin-top: 100.38rpx;
}

.title-left image {
  width: 31.25rpx;
  height: 31.25rpx;
}

.title-right {
  width: 677rpx;
  height: 115rpx;
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
  font-size: 31rpx;
  color: #1C1C1C;
  line-height: 44rpx;
  text-align: center;
  font-style: normal;
  text-transform: none;
  margin-top: 93.38rpx;
  margin-right: 31.25rpx;
}

.section-header {
  width: 104rpx;
  height: 41rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
  margin-top: 20rpx;
  border-radius: 21rpx 21rpx 21rpx 21rpx;
  display: flex;
  align-items: center;  
  justify-content: center;
  margin-left: 41.67rpx;
}

.section-header text {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 23rpx;
color: #FFFFFF;
line-height: 32rpx;
text-align: left;
font-style: normal;
text-transform: none;
}

.section-header.sold {
  background-color: #F9AE49;
  color: white;
}

.section-header.unsold {
  background-color: #ADC05A;
  color: white;
  margin-top: 30rpx;
}

.market-item {
  width: 666rpx;
  height: 72rpx;
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
}

.market-item-icon image {
  width: 31.25rpx;
  height: 31.25rpx;
  margin-right: 20rpx;
}

.market-item-content {
  flex: 1;
}

.market-item-details {
  font-size: 28rpx;
  color: #7F7F7F;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 17rpx;
color: #7F7F7F;
line-height: 23rpx;
text-align: left;
font-style: normal;
text-transform: none;
}

.highlight-orange {
  color: #F9AE49;
  font-weight: 400;
}

.highlight-green {
  color: #ADC05A;
  font-weight: 400;
}

.market-item-total {
  width: 160rpx;
  text-align: right;

font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 31rpx;
color: #F9AE49;
line-height: 31rpx;
text-align: right;
font-style: normal;
text-transform: none;
}

.total-price-orange {
  color: #F9AE49;
  font-size: 36rpx;
  font-weight: 400;
}

.market-item-actions {
  display: flex;
  flex-direction: column;
  width: 160rpx;
  justify-content: space-between;
  gap: 10rpx;
}

.market-item-actions button {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 19rpx;
color: #FFFFFF;
line-height: 26rpx;
text-align: center;
font-style: normal;
text-transform: none;
}

.modify-price-btn, .recycle-btn {
  width: 116rpx;
  height: 31rpx;
  padding: 0;
  line-height: 31rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.modify-price-btn {
  background-color: #ADC05A;
  color: white;
}

.recycle-btn {
  background-color: #ADC05A;
  color: #333;
}

/* Popup overlay */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

/* Recycle popup */
.recycle-popup {
  position: fixed;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%, 50%);
  width: 395rpx;
  height: 175rpx;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* Sell to platform button */
.sell-to-platform-btn {
  width: 291rpx;
  height: 45rpx;
  line-height: 72rpx;
  background-color: #BECD7A;
  color: #FFFFFF;
  font-size: 26rpx;
  border-radius: 36rpx;
  margin-bottom: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
}

/* Send back to self button */
.send-back-to-self-btn {
  width: 291rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #78956D;
  color: #FFFFFF;
  font-size: 26rpx;
  border-radius: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
}

.sell-to-platform-btn, .send-back-to-self-btn {
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 23rpx;
color: #FFFFFF;
line-height: 32rpx;
text-align: center;
font-style: normal;
text-transform: none;
display: flex;
align-items: center;
justify-content: center;
}

/* Remove button hover effect to match design */
button::after {
  border: none;
}

button {
  margin: 0;
  padding: 0;
}

/* Success Modal */
.success-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-modal {
  width: 400rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
}

.success-title {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
  font-size: 32rpx;
  color: #000000;
  line-height: 44rpx;
  margin-bottom: 10rpx;
}

.success-subtitle {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
  font-size: 24rpx;
  color: #666666;
  line-height: 34rpx;
}

/* 价格修改弹窗样式 */
.price-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  height: 100vh;
}

.price-modal {
  width: 440rpx;
  height: 261rpx;
  position: fixed;
  left: 16%;
  right: 0;
  bottom: 40%;
  background-color: #FFFFFF;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  padding: 40rpx 30rpx;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.price-modal-show {
  transform: translateY(0);
}

.price-modal-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  margin-bottom: 40rpx;
}

.price-input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 20rpx;
}

.price-symbol {
  font-size: 36rpx;
  color: #333333;
  margin-right: 10rpx;
}

.price-input {
  width: 200rpx;
  font-size: 36rpx;
  color: #333333;
  text-align: left;
}

.price-modal-footer {
  display: flex;
  flex-direction: column;
}

.price-modal-limit {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 20rpx;
}

.price-modal-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.price-modal-cancel, .price-modal-confirm {
  width: 180rpx;
  height: 50rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.price-modal-cancel {
  color: #333333;
  background-color: #F5F5F5;
}

.price-modal-confirm {
  color: #FFFFFF;
  background-color: #ADC05A;
} 