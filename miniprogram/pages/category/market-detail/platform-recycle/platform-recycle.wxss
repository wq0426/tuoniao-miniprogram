page {
  background-color: #FFFFFF;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  position: relative;
}

.title {
  width: 750rpx;
  height: 115rpx;
  justify-content: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #FFFFFF;
}

.title-left {
  height: 115rpx;
  margin-left: 41.67rpx;
  margin-top: 100.38rpx;
}

.title-left image {
  width: 31.25rpx;
  height: 31.25rpx;
}

.title-right {
  width: 677rpx;
  height: 115rpx;
  text-align: center;
}

/* Egg Image */
.egg-image {
  height: 348rpx;
  display: flex;
  justify-content: center;
}

.egg-image image {
  width: 666rpx;
  height: 348rpx;
  border-radius: 10rpx;
}

/* Price Section */
.price-section {
  width: 666rpx;
  height: 233rpx;
  margin-top: 20rpx;
  background-color: #F7F7F2;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.price-title {
  margin-top: 20rpx;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 25rpx;
color: #1C1C1C;
line-height: 35rpx;
text-align: center;
font-style: normal;
text-transform: none;
}

.price-amount {
  margin-top: 31rpx;
font-family: Source Han Sans CN, Source Han Sans CN;
font-weight: 400;
font-size: 52rpx;
color: #1C1C1C;
line-height: 35rpx;
text-align: center;
font-style: normal;
text-transform: none;
}

.price-amount text {
  font-size: 70rpx;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 83.3rpx;
  margin-top: 31.05rpx;
}

.cancel-btn, .confirm-btn {
  width: 187rpx;
  height: 52rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #D3D3D3;
  color: #333333;
}

.confirm-btn {
  background-color: #ADC05A;
  color: #FFFFFF;
}

/* Rules Section */
.rules-section {
  width: 666rpx;
  background-color: #F7F7F2;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.rules-title {
  padding-top: 20rpx;
  padding-left: 20rpx;
}
.rule-item {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.rules-title {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 500;
  font-size: 23rpx;
  color: #1C1C1C;
  line-height: 35rpx;
  text-align: left;
  font-style: normal;
  text-transform: none;
  margin-bottom: 20rpx;
}

.rule-item {
  margin-bottom: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-size: 19rpx;
  color: #7F7F7F;
  line-height: 30rpx;
  text-align: left;
  font-style: normal;
  text-transform: none;
}

.rule-title {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: bold;
  font-size: 19rpx;
  color: #1C1C1C;
  display: inline;
}

.rule-content {
  font-family: Source Han Sans CN, Source Han Sans CN;
  font-weight: 400;
  font-size: 19rpx;
  color: #7F7F7F;
  line-height: 30rpx;
  display: inline;
} 